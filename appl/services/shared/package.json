{
  "name": "shared",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.18 || >= 16.13"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:tm": "node dist/apps/tenant-management/main",
    "start:tr": "node dist/apps/tenant-registration/main",
    "start:um": "node dist/apps/user-management/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/shared/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.18.0",
    "@aws-sdk/client-codepipeline": "^3.22.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.18.0",
    "@aws-sdk/client-dynamodb": "^3.18.0",
    "@aws-sdk/lib-dynamodb": "^3.18.0",
    "@aws-sdk/util-dynamodb": "^3.18.0",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.0.0",
    "@nestjs/passport": "^8.0.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "amazon-cognito-identity-js": "^5.0.1",
    "ansi-regex": "^6.0.1",
    "axios": "^0.27.2",
    "cli-table3": "^0.6.2",
    "follow-redirects": "^1.15.1",
    "jest-snapshot": "^28.1.2",
    "jest-validate": "^28.1.1",
    "jest-watcher": "^28.1.1",
    "jwks-rsa": "^2.0.3",
    "minimist": "^1.2.6",
    "ora": "^6.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pretty-format": "^28.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.1",
    "string-length": "^5.0.1",
    "string-width": "^5.1.2",
    "strip-ansi": "^7.0.1",
    "table": "^6.8.0",
    "tmpl": "^1.0.5",
    "uuid": "^8.3.2",
    "wrap-ansi": "^8.0.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.0.0",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.5.1",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/auth/(.*)": "<rootDir>/libs/auth/src/$1",
      "@app/auth": "<rootDir>/libs/auth/src",
      "@app/client-factory/(.*)": "<rootDir>/libs/client-factory/src/$1",
      "@app/client-factory": "<rootDir>/libs/client-factory/src"
    }
  }
}
